/*
 * runtime
 */
int loopIdx;

 /*
 * utils
 */
int setNextLoopIdx() {
  int start = 0;
  int reset = loopEnd - 1;

  if(loopIdx < reset) {
    loopIdx = loopIdx + 1;
  } else if(loopIdx == reset) {
    loopIdx = start;
  }
  // Serial.println(loopIdx);
}

/*
 * main
 */
void setup() {
  // Serial.begin(9600);
  dimmerRedTwo.begin(NORMAL_MODE, ON);
  dimmerGreenTwo.begin(NORMAL_MODE, ON);
  dimmerGreenOne.begin(NORMAL_MODE, ON);
  dimmerRedOne.begin(NORMAL_MODE, ON);
}

void loop() {
  dimmerRedTwo.setPower(redTwoPowerPositions[loopIdx]);
  dimmerGreenTwo.setPower(greenTwoPowerPositions[loopIdx]);
  dimmerGreenOne.setPower(greenOnePowerPositions[loopIdx]);
  dimmerRedOne.setPower(redOnePowerPositions[loopIdx]);
  delay(delayMs);
  setNextLoopIdx();
}